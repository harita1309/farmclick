<% include ./partials/header %>
    

<div class="jumbotron jumbotron-fluid" style="margin:60px; background-color:rgba(93, 147, 96,0.4);">
  <div class="row">
    <div class="col-md-6" style="text-align:center;">
        <img src="//cdn.onlinewebfonts.com/svg/img_191958.png" style="width:25%; height:25%">
    </div>
    <div class="col-md-6" style="float:right">
        <h2 class="display-4" style="text-transform:uppercase;"><%= user.firstname %> <%= user.lastname %></h2>
        <!--<p class="lead"><%= user.contact %></p>-->
        <div style="margin-left:100px;">
          <!--<a href="#" class="btn btn-primary" style="text-align:center;">More details</a>-->
          <a href="#myhiddensection" class="btn btn-primary" style="background:black;color:white" onClick="$('#myhiddensection').show();">More Details</a>
          <div id="myhiddensection" style="display: none;text-transform:uppercase;">
            <h3>Contact Number : <%= user.username %></h3>
            <h3>Address : <%= user.address %></h3>
            <h3>Mandal : <%= user.mandal %></h3>
            <h3>District :<%= user.district %></h3>
            <a class="btn btn-primary" href="editprofile" style="background:black;color:white">Edit Profile</a>
          </div>
        </div>
    </div>
  </div>
</div>

<% images = ['images/photo-1452948491233-ad8a1ed01085.jpg','images/photo-1472653525502-fc569e405a74.jpg','images/f72e2c85.jpg','images/photo-1473648717346-73c9c15cbad6.jpg','images/photo-1507844090982-e6e9452ea68d.jpg'] %>
<h1 style="text-align:center;">YOUR ORDERS</h1>       
<div style="margin:90px;text-align:center">
  <% var i =0; %>
  <% orders.forEach(function(order){ %>
    <div class="row">
      <div class="col-sm-12">
        <div class="jumbotron" style="background-image:url(<%= images[i] %>);opacity:1;background-size:100%">
          <div class="card">
            <div class="card-body" style="padding: 30px;background-color:rgba(0, 0, 0, 0.1); ">
              <h3 class="card-title" style="text-align:center;color:white; text-transform:uppercase"><b><%= order.cropname %></b></h3><br>
              <p class="card-text"><h3 style="color:white;">NUMBER OF UNITS : <%= order.numofunits %> </h3>
              <h3 style="color:white;">STATUS : <span><%=order.status%></span></h3>
              </p>
              <div class="card">
                <div class="card-body" style="padding: 10px;">
                  <p class="card-text">
                  <% if(order.status=="not sold"){ %>
                      <h3 class="card-title" style="text-align:center"><b style="color:white">Hello! Help us track the status of your orders!!</b></h3><br>
                      <form method=POST action="/profile" style="width:100%">
                        <input type="radio" name="sold" value="sold" onchange='radiochange(this.value)'><strong style="color:white">SOLD</strong>
                        <input type="text" name="orderid" value=<%= order._id %> style="display:none">
                        <br><button style="width:25%;">Submit</button>
                      </form>
                    <% } %>
                  </p>
                </div>
              </div>    
            </div>
          </div>
        </div>
      </div>
    </div>
    <% if(i<(images.length)-1){i++;}
        else{i=0;}
    %>
  <% }); %>
</div>

<% include ./partials/footer %>