    <!-- signup form -->
    <section id = "signupfrom">
        <div class="row signupform">
        <div class="col-md-6 col-0-gutter signupimage" style="height:820px">
                <img src="images/photo-1429991889170-afd56b2a1210.jpg" style="height:820px;width:100%"/>
            </div>
            <div class="col-md-6 signupbox div-with-bg" style="height:820px;background:black">
                <% if(verified==0){ %>        
                 <div style="padding-bottom:318px;width:80%;height:20%;margin-top:300px">
                    <% if(alert=="display"){ %>
                        <p style="padding-left:180px;color:white"><strong>WRONG OTP PLEASE TRY AGAIN</strong></p>
                    <% } %>
                    <form action="/genotp" method="POST" style="height:820px;width:inherit;margin-left:100px">
                        <input type="text" placeholder="contact" name="contact" style="margin-bottom:10px" required></br>
                        <button>Genrate OTP</button>
                    </form>
                    </div>
                <% } %>
                <% if(verified==1){ %>
                    <div style="padding-bottom:318px;width:80%;height:20%;margin-top:300px">
                    <form action="/verifyotp" method="POST" style="height:820px;width:inherit;margin-left:100px">
                        <p style="padding-left:100px;color:white"><strong>AN OTP IS SENT TO YOU</strong></p>
                        <input type="text" placeholder="please eter the otp" name="otp" style="margin-bottom:10px" required></br>
                        <button>Verify OTP</button>
                    </form>
                    </div>
                <% } %>
                <% if(verified == 2){ %>
                    <% if(alert=="display"){ %>
                        <p style="margin:0 auto"><strong>User Already Exits</strong></p>
                    <% } %>
                    <form action="/signup" method = "POST" style="height:800px;width:inherit;margin-left:100px">
                        <h3 style="color:white"><strong>Sign Up</strong></h3>
                         <hr />
                        <label for="firstname" style="color:white"><b>First Name</b></label>
                        <input type="text" placeholder="First Name" name="firstname" style="margin-bottom:10px" required>

                        <label for="lastname" style="color:white"><b>Last Name</b></label>
                        <input type="text" placeholder="Last Name" name="lastname" style="margin-bottom:10px" required>

                        <input  style="display:none" type="text" placeholder="contact" name="contact" value=<%=contact%> >

                        <label for="address" style="color:white"><b>Address</b></label>
                        <textarea name="address" placeholder="Address" style="margin-bottom:10px"></textarea>

                        <label for="mandal" style="color:white"><b>Mandal</b></label>
                        <select name="mandal" style="margin-bottom:10px">
                            <option>Mandal</option>
                            <option value="lbnagar">L.B.Nagar</option>
                            <option value="chaderghat">Chaderghat</option>
                            <option value="srnagar">SRNagar</option>
                            <option value="ramnagar">Ram Nagar</option>
                        </select>
                        <label for="distrcit" style="color:white"><b>District</b></label>
                        <select name="district" style="margin-bottom:10px">
                            <option>District</option>
                            <option value="nalgonda">Nalgonda</option>
                            <option value="rr">Rangareddy</option>
                        </select>
            

                        <label for="password" style="color:white"><b>Password</b></label>
                        <input type="password" placeholder="Enter Password" name="password" style="margin-bottom:10px" required></br>
                        
                        
                        <!--<div class="clearfix" style="display:none">
                            <button type="button" class="cancelbtn">Cancel</button>
                            <button type="submit" class="signupbtn">Sign Up</button>
                        </div>  -->
                        <button type="submit" style="margin-top:10px">SIGN UP</button>
                
                </form>
             <% } %>
            
            </div>
        
        </div>
    </section>
    <!-- signup from end -->
    


